<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">#42a5f5</item>
        <item name="colorPrimaryDark">#0077C2</item>
        <item name="textColor">#313131</item>
        <item name="headerColor">#000000</item>
        <item name="metaTextColor">#606060</item>
        <item name="bgColor">#ffffff</item>
        <item name="android:fontFamily">@font/product_sans</item>
        <item name="android:foreground">#00000000</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="DarkTheme" parent="AppTheme.NoActionBar">
        <item name="textColor">#AFAFAF</item>
        <item name="headerColor">#FFFFFF</item>
        <item name="metaTextColor">#B1B1B1</item>
        <item name="bgColor">#000000</item>
        <item name="android:fontFamily">@font/product_sans</item>
        <item name="android:foreground">#00000000</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="GreyTheme" parent="DarkTheme">
        <item name="bgColor">#313131</item>
    </style>
    
    <style name="settingsDark" parent="DarkTheme">
        <item name="android:textColor">#AFAFAF</item>
        <item name="android:textColorTertiary">#AFAFAF</item>
        <item name="android:textColorSecondary">#AFAFAF</item>
        <item name="alertDialogTheme">@style/DialogThemeDark</item>
    </style>
    <style name="settingsLight" parent="LightTheme">
        <item name="android:textColor">#313131</item>
        <item name="android:textColorTertiary">#313131</item>
        <item name="android:textColorSecondary">#313131</item>
        <item name="alertDialogTheme">@style/DialogThemeLight</item>
    </style>
    <style name="settingsGrey" parent="GreyTheme">
        <item name="android:textColor">#DEDEDE</item>
        <item name="android:textColorTertiary">#DEDEDE</item>
        <item name="android:textColorSecondary">#DEDEDE</item>
        <item name="alertDialogTheme">@style/DialogThemeDark</item>
    </style>

    <style name="splashScreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:foreground">@mipmap/ic_launcher</item>
        <item name="android:background">#222</item>
        <item name="android:foregroundGravity">center</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="DialogThemeDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:colorBackground">#1E1E1E</item>
        <item name="android:textColorSecondary">#D8D8D8</item>
        <item name="textColorAlertDialogListItem">#D8D8D8</item>
        <item name="color">@color/colorAccent</item>
    </style>
    <style name="DialogThemeLight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorBackground">#ECECEC</item>
        <item name="android:textColorSecondary">#313131</item>
        <item name="textColorAlertDialogListItem">#313131</item>
        <item name="color">@color/colorAccent</item>
    </style>

</resources>